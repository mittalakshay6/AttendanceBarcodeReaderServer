<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="200dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    tools:context=".DatabaseExportActivity">
    <EditText
        android:id="@+id/fileNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Enter file name..."
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />
    <Button
        android:id="@+id/exportBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fileNameView"
        android:text="@string/exportBtn"
        android:onClick="onClickExportBtn"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exportBtn"
        android:hint="Database will be exported to the Downloads folder."
        android:textAlignment="center"/>
</RelativeLayout>