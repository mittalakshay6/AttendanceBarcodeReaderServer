<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshay.attendancebarcodereaderserver.StartAttendanceActivity">

    <ListView
        android:id="@+id/regNoList"
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp" />
    <Button
        android:id="@+id/stopAttendance"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Stop Taking Attendence"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="onClickStopAttendance"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/duplicateCheckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stopAttendance"
        android:layout_centerHorizontal="true"
        android:onClick="onClickDuplicateCheckBtn"
        android:text="Suspected proxies" />


</RelativeLayout>